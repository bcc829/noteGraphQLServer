scalar Date

extend type Query {
 #게시글 전체 검색
 findAllPagingPosts(
  #페이지 인덱스
  pageIndex: Int!,
  #보여줄 데이터 제한 수
  limit: Int!,
 ): PagenatedPosts!
}

type Mutation {
    createPost(createPost: CreatePostInput!): Post!
}

#게시글
type Post {
 #게시글 seq id
 seqId: Int!
 #게시글 제목
 title: String!
 #게시글 내용
 content: String!
 #게시글 글쓴이(회원 닉네임)
 regId: String!
 #게시글 조회 수
 readCount: Int!
 #게시글 등록일
 regDate: Date
 #게시글 수정일
 updDate: Date
 #페이징 댓글 리스트
 pagenatedPostComments(
  #페이지 인덱스
  pageIndex: Int!,
  #보여줄 데이터 제한 수
  limit: Int!): PagenatedPostComments
}

#게시글 페이징 리스트
type PagenatedPosts {
 #게시글 리스트
 content : [Post]
 #page 정보
 pageInfo : PageInfo!
}

input CreatePostInput{
 #게시글 제목
 title: String!
 #게시글 내용
 content: String!
 #게시글 글쓴이(회원 닉네임)
 regId: String!
}


